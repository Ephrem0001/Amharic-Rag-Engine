# Required: PostgreSQL connection (create database amharic_rag first)
DATABASE_URL=postgresql+psycopg://postgres:YOUR_PASSWORD@localhost:5432/amharic_rag

INDEX_DIR=./indexes
UPLOAD_DIR=./data/uploads
EMBEDDING_MODEL_BASE=rasyosef/roberta-amharic-text-embedding-base
EMBEDDING_MODEL_MEDIUM=rasyosef/roberta-amharic-text-embedding-medium
EMBEDDING_MODEL_FINETUNED=models/embeddings_finetuned
GENERATOR_MODEL=rasyosef/Llama-3.2-400M-Amharic
DEVICE=cpu
TORCH_DTYPE=float32
CHUNK_TARGET_CHARS=1000
CHUNK_OVERLAP_RATIO=0.15
TOP_K_DEFAULT=5
TEXTGEN_MAX_NEW_TOKENS=256
TEXTGEN_TEMPERATURE=0.2
