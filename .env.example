# Database - replace yourpassword with your local postgres password
DATABASE_URL=postgresql://postgres:yourpassword@localhost:5432/amharic_rag

# Paths
INDEX_DIR=./indexes
UPLOAD_DIR=./data/uploads

# Embedding models
EMBEDDING_MODEL_BASE=rasyosef/roberta-amharic-text-embedding-base
EMBEDDING_MODEL_MEDIUM=rasyosef/roberta-amharic-text-embedding-medium
EMBEDDING_MODEL_FINETUNED=models/embeddings_finetuned

# Generator model (Walia-LLM)
GENERATOR_MODEL=EthioNLP/Amharic-LLAMA-all-data

# Hardware
DEVICE=cpu
TORCH_DTYPE=float32

# Chunking
CHUNK_TARGET_CHARS=1000
CHUNK_OVERLAP_RATIO=0.15

# Retrieval
TOP_K_DEFAULT=5

# Text generation defaults
TEXTGEN_MAX_NEW_TOKENS=256
TEXTGEN_TEMPERATURE=0.2
